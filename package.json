{
  "name": "video-player",
  "version": "1.0.0",
  "author": {
    "name": "Oleksii Makodzeba",
    "email": "oleksiim@wix.com"
  },
  "main": "dist/statics/video-player.bundle.js",
  "module": "dist/src/index.js",
  "jsnext:main": "dist/src/index.js",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "start": "yoshi start --entry-point=./server/start-fake-server.js",
    "lint": "yoshi lint",
    "csscomb": "csscomb src/.",
    "csscomb:lint": "csscomb -lv src/.",
    "test:unit": "yoshi test --mocha",
    "test:playback": "node ./test/boot-mediaserver-and-test",
    "test": "npm run test:unit && npm run test:playback",
    "build": "yoshi build",
    "deploy": "yoshi build && gh-pages -d dist/statics",
    "release": "yoshi release",
    "precommit": "npm run lint && npm run csscomb:lint && npm run build && npm test"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "core-js": "^2.4.1",
    "css-element-queries": "^0.4.0",
    "dashjs": "^2.5.0",
    "eventemitter3": "^2.0.3",
    "hls.js": "^0.7.9",
    "jbone": "^1.2.0",
    "lodash": "^4.17.4"
  },
  "private": false,
  "devDependencies": {
    "babel-plugin-lodash": "^3.2.11",
    "babel-preset-es2015": "~6.9.0",
    "babel-preset-stage-0": "^6.5.0",
    "chai": "~3.5.0",
    "csscomb": "^3.1.7",
    "ejs": "^2.5.5",
    "express": "^4.14.0",
    "gh-pages": "^0.12.0",
    "husky": "^0.13.1",
    "jsdom-global": "^2.1.1",
    "sinon": "^2.3.8",
    "yoshi": "^1.1.98"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-0"
    ]
  },
  "yoshi": {
    "separateCss": false,
    "exports": "VideoPlayer",
    "entry": {
      "video-player": "./index.js",
      "video-player-test": "./playback-test.js"
    },
    "externalUnprocessedModules": []
  },
  "keywords": [
    "player",
    "video",
    "media",
    "html5",
    "mse",
    "adaptive",
    "hls",
    "dash",
    "mpeg"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:wix-private/video-player.js.git"
  },
  "publishConfig": {
    "registry": "http://repo.dev.wix/artifactory/api/npm/npm-local/"
  }
}
