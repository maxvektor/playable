{
  "name": "video-player",
  "version": "1.0.0",
  "author": {
    "name": "Oleksii Makodzeba",
    "email": "oleksiim@wix.com"
  },
  "main": "dist/statics/video-player.bundle.js",
  "module": "dist/src/index.js",
  "jsnext:main": "dist/src/index.js",
  "files": [
    "dist",
    "src",
    "video-player-cards"
  ],
  "scripts": {
    "start": "PORT=5000 haste start --entry-point=./dev-env/start-dev-env.js",
    "lint": "npm run tslint:all",
    "build": "haste build",
    "test": "npm run test:unit && npm run test:playback",
    "documentation": "ts-node ./scripts/documentation > ./API.md",
    "documentation:gitadd": "npm run documentation && git add ./API.md",
    "deploy": "haste build && gh-pages -d dist/statics",
    "release": "haste release",
    "tslint": "ts-node node_modules/.bin/tslint -c tslint.json",
    "tslint:all": "npm run tslint -- 'src/**/*.ts'",
    "prettier": "prettier --config .prettierrc --write",
    "prettier:all": "npm run prettier -- '{src,scripts,tslint-rules}/**/*.ts'",
    "csscomb:all": "csscomb src/.",
    "test:playback": "node ./dev-env/boot-devserver-and-test.js",
    "test:unit": "haste test --mocha",
    "precommit": "lint-staged && npm run build && npm test && npm run documentation:gitadd"
  },
  "lint-staged": {
    "*.ts": [
      "prettier",
      "tslint",
      "git add"
    ],
    "*.scss": [
      "csscomb -tty-mode --",
      "git add"
    ]
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "core-js": "^2.4.1",
    "css-element-queries": "^0.4.0",
    "dashjs": "latest",
    "eventemitter3": "^2.0.3",
    "hls.js": "latest",
    "jbone": "^1.2.0",
    "lodash": "^4.17.4"
  },
  "devDependencies": {
    "@babel/generator": "^7.0.0-beta.32",
    "@babel/template": "^7.0.0-beta.32",
    "@babel/traverse": "^7.0.0-beta.32",
    "@babel/types": "^7.0.0-beta.32",
    "@types/chai": "^4.0.4",
    "@types/mocha": "^2.2.44",
    "babylon": "7.0.0-beta.32",
    "chai": "~3.5.0",
    "csscomb": "^4.2.0",
    "documentation": "^5.3.3",
    "ejs": "^2.5.5",
    "express": "^4.14.0",
    "gh-pages": "^0.12.0",
    "glob": "^7.1.2",
    "haste-cli": "~0.1.16",
    "haste-preset-yoshi": "0.0.10",
    "husky": "^0.13.1",
    "jsdom-global": "^2.1.1",
    "lint-staged": "^5.0.0",
    "prettier": "1.8.2",
    "sinon": "^2.3.8",
    "tslint": "^5.8.0",
    "tslint-eslint-rules": "^4.1.1",
    "typescript": "^2.6.1"
  },
  "haste": {
    "preset": "yoshi"
  },
  "yoshi": {
    "separateCss": false,
    "optimizeMoment": true,
    "exports": "VideoPlayer",
    "entry": {
      "video-player": "./index.ts",
      "video-player-test": "./e2e/playback-test.ts",
      "video-player-develop": "./develop.ts"
    }
  },
  "keywords": [
    "player",
    "video",
    "media",
    "html5",
    "mse",
    "adaptive",
    "hls",
    "dash",
    "mpeg"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:wix-private/video-player.js.git"
  },
  "publishConfig": {
    "registry": "http://repo.dev.wix/artifactory/api/npm/npm-local/"
  },
  "private": false,
  "unpkg": true
}
