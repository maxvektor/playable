{
  "name": "video-player",
  "version": "1.0.0",
  "author": {
    "name": "Oleksii Makodzeba",
    "email": "oleksiim@wix.com"
  },
  "main": "dist/statics/video-player.bundle.js",
  "module": "dist/src/index.js",
  "jsnext:main": "dist/src/index.js",
  "files": [
    "dist",
    "src",
    "video-player-cards"
  ],
  "scripts": {
    "start": "PORT=5000 yoshi start --entry-point=./dev-env/start-dev-env.js",
    "lint": "yoshi lint",
    "csscomb": "csscomb src/.",
    "csscomb:lint": "csscomb -lv src/.",
    "test:unit": "yoshi test --mocha",
    "test:playback": "node ./dev-env/boot-devserver-and-test.js",
    "test": "npm run test:unit && npm run test:playback",
    "build": "yoshi build",
    "deploy": "yoshi build && gh-pages -d dist/statics",
    "release": "yoshi release",
    "precommit": "npm run lint && npm run csscomb:lint && npm run build && npm test"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "core-js": "^2.4.1",
    "css-element-queries": "^0.4.0",
    "dashjs": "latest",
    "eventemitter3": "^2.0.3",
    "hls.js": "latest",
    "jbone": "^1.2.0",
    "lodash": "^4.17.4"
  },
  "devDependencies": {
    "@types/chai": "^4.0.4",
    "@types/mocha": "^2.2.44",
    "chai": "~3.5.0",
    "csscomb": "^4.2.0",
    "ejs": "^2.5.5",
    "express": "^4.14.0",
    "gh-pages": "^0.12.0",
    "husky": "^0.13.1",
    "jsdom-global": "^2.1.1",
    "sinon": "^2.3.8",
    "typescript": "^2.6.1",
    "yoshi": "^1.1.98"
  },
  "yoshi": {
    "separateCss": false,
    "optimizeMoment": true,
    "exports": "VideoPlayer",
    "entry": {
      "video-player": "./index.ts",
      "video-player-test": "./e2e/playback-test.ts",
      "video-player-develop": "./develop.ts"
    }
  },
  "keywords": [
    "player",
    "video",
    "media",
    "html5",
    "mse",
    "adaptive",
    "hls",
    "dash",
    "mpeg"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:wix-private/video-player.js.git"
  },
  "publishConfig": {
    "registry": "http://repo.dev.wix/artifactory/api/npm/npm-local/"
  },
  "private": false,
  "unpkg": true
}
