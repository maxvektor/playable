<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Video Player</title>
  <style>
    #content {
      width: 100%;
      height: 100%;
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      display: flex;
      justify-content: center;
      align-items: center;
    }
    #player {
      width: 760px;
      height: 427px;
    }
  </style>
  <% if (debug) { %>
  <script src="<%= staticsBaseUrl %>video-player.bundle.js"></script>
  <% } else { %>
  <script src="<%= staticsBaseUrl %>video-player.bundle.min.js"></script>
  <% } %>
</head>
<body>

<div id="content">
  <div id="player">

  </div>
</div>
<script>
  var player = new VideoPlayer.Player({
    autoplay: false,
    muted: false,
    loop: false,
    preload: 'auto',
    volume: 0.5,
    src: [
      'https://clips.vorwaerts-gmbh.de/big_buck_bunny.mp4',
    ],

    size: {
      width: 300,
      height: 427,
    },
    overlay: {
      poster: 'https://cs7050.vk.me/c626226/v626226133/4c4dd/fkg9iTcqoQI.jpg'
    },
    controls: {
      progress: false,
      fullscreen: false
    }
  });
  document.getElementById('player').appendChild(player.node);
</script>
</body>
</html>
