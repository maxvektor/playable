{
  "compilerOptions": {
    "experimentalDecorators": true,
    "sourceMap": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "target": "es5",
    "lib": ["dom", "es2016", "es2017"],
    "types": ["mocha", "chai", "node"]
  },
  "include": [
    "./src/**/*.ts"
  ]
}
